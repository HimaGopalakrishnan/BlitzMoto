<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="App.Features.Menu.Pages.MenuView"
            xmlns:pages="clr-namespace:App.Features.Menu.Pages"
            xmlns:home="clr-namespace:App.Features.Home"
            NavigationPage.HasNavigationBar="False">
  <FlyoutPage.Flyout>
    <pages:MenuViewFlyout x:Name="FlyoutPage" />
  </FlyoutPage.Flyout>
  <FlyoutPage.Detail>
    <NavigationPage>
      <x:Arguments>
        <home:HomeView />
      </x:Arguments>
    </NavigationPage>
  </FlyoutPage.Detail>
</FlyoutPage>